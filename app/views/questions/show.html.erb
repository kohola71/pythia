<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
<p>
  <strong>QUESTION:</strong>
  <h2><%= @question.text %></h2>

</p>
</div>

<br>
<br>

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

  <% @possible_answers.each do |possible_answer| %>
    <div class="col-md-6">
      <h4><a href="#"><%= possible_answer.body %></a></h4>
    </div>
    <div class="col-md-6">

    <%= form_for([@question, possible_answer, Insight.new]) do |f| %>
      <%= f.radio_button(:kind, "PRO") %>
      <%= f.label "PROs" %>
      <%= f.radio_button(:kind, "CON") %>
      <%= f.label "CONs" %>

      <%= f.text_field :body %>
      <%= f.submit :Save %>
    <% end %>
    </div>
  <% end %>
  </div>
</div>

<br/>

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

<%= link_to 'Edit Question', edit_question_path(@question) %> |
<%= link_to 'Back to Questions', questions_path %>

</div>