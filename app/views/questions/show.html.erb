
<br> 
<br> 

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
<p>
  <strong>QUESTION:</strong>
  <h2><%= @question.text %></h2>

</p>
</div> 

<br>
<br> 

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

<p>
  <strong>POSSIBLE ANSWER:</strong>
  <h2><% @question.possible_answers.each do |possible_answer| %>
    <%= possible_answer.body %>
    <% end %> 
</p>

</div>

<br> 

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
<ul>
<% @insights.each do |insight| %>
<li> 
  <strong> <%= insight.kind %> </strong>
  <%= insight.body %>
<% end %> 
</ul> 
 

<h2>Add pros & cons:</h2>

<%= form_for([@question, @insight]) do |f| %>
 <p>
 <%= f.radio_button(:kind, "PRO") %>
 <%= f.label "PROs" %>
 <%= f.radio_button(:kind, "CON") %>
 <%= f.label "CONs" %>
 <br/>

<%= f.text_area :body %>
<%= f.hidden_field :question_id, :value => @question.id %>
  </p>

 <p>
    <%= f.submit :Save %>
  </p>
<% end %>




</div>

<br> 
<br> 

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
 
<%= link_to 'Edit Question', edit_question_path(@question) %> |
<%= link_to 'Back to Questions', questions_path %>


</div> 